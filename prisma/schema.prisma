generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL") // uses connection pooling
}

model User {
  id         Int           @id @default(autoincrement())
  name       String
  email      String        @unique
  password   String
  createdAt  DateTime      @default(now())
  categories String
  totalToken Float
  expenses   Transaction[]
  tasks      Task[]
}

model Transaction {
  id          Int      @id @default(autoincrement())
  amountUSD   Float
  sessionID   String   @unique
  Tokens      Float
  Status      String
  description String?
  userEmail   String
  user        User     @relation(fields: [userEmail], references: [email]) // Modify relation
  createdAt   DateTime @default(now())
}

model Task {
  id          Int      @id @default(autoincrement())
  category    String
  title       String
  description String
  userEmail   String
  user        User     @relation(fields: [userEmail], references: [email]) // Modify relation
  createdAt   DateTime @default(now())
}
